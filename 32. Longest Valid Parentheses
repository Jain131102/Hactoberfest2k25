class Solution {
    public int longestValidParentheses(String s) {
       
       int left=0,right=0,max=0;
        for (char ch:s.toCharArray()) {
            if(ch=='(')
            left++;
            else
            right++;

            if(left==right)
            {
            max=Math.max(max,left*2);
            }
            else if(right>left)
            {
                left=0;
                right=0;
            }
        }

        left=0;right=0;
        for (int i=s.length()-1;i>=0;i--) {
            char ch=s.charAt(i);
            if(ch=='(')
            left++;
            else
            right++;

            if(left==right)
            {
            max=Math.max(max,left*2);
            }
            else if(left>right)
            {
                left=0;
                right=0;
            }
        }
        return max;
    }
}
